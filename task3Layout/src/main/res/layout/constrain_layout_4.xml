<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="@id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/textViewCounterPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="125"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/textViewTextPosts"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="@id/textViewTextPosts"
        app:layout_constraintVertical_bias="0.37"/>
    <TextView
        android:id="@+id/textViewTextPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/posts"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.63"/>
    <TextView
        android:id="@+id/textViewCounterFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20K"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintStart_toStartOf="@id/textViewTextFollowers"
        app:layout_constraintEnd_toEndOf="@id/textViewTextFollowers"
        app:layout_constraintVertical_bias="0.37"
        />
    <TextView
        android:id="@+id/textViewTextFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/followers"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintStart_toEndOf="@id/textViewTextPosts"
        app:layout_constraintEnd_toStartOf="@id/textViewTextFollowing"
        app:layout_constraintVertical_bias="0.63"/>
    <TextView
        android:id="@+id/textViewCounterFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/textViewTextFollowing"
        app:layout_constraintEnd_toEndOf="@id/textViewTextFollowing"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintVertical_bias="0.37"/>
    <TextView
        android:id="@+id/textViewTextFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/following"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/imageViewPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0.63"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/imageViewPhoto"
        app:layout_constraintTop_toBottomOf="@id/imageViewPhoto"/>
    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/textViewUserName"
        app:layout_constraintTop_toBottomOf="@id/textViewUserName"/>
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/textViewAddress"
        app:layout_constraintTop_toBottomOf="@id/textViewAddress"/>
    <ImageView
        android:id="@+id/view1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDescription"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:id="@+id/view6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="20dp"/>
    <ImageView
        android:id="@+id/view2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@id/view1"
        app:layout_constraintEnd_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view1"/>
    <ImageView
        android:id="@+id/view3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintEnd_toStartOf="@id/view4"
        app:layout_constraintTop_toTopOf="@id/view1"/>
    <ImageView
        android:id="@+id/view4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@id/view3"
        app:layout_constraintEnd_toStartOf="@id/view5"
        app:layout_constraintTop_toTopOf="@id/view1"/>
    <ImageView
        android:id="@+id/view5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@id/view4"
        app:layout_constraintEnd_toStartOf="@id/view6"
        app:layout_constraintTop_toTopOf="@id/view1"/>
    <Button
        android:id="@+id/buttonDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_baseline_directions_24"
        android:drawableTint="@color/blue"
        android:text="@string/direction"
        android:textColor="@color/blue"
        android:padding="0dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp" />
    <Button
        android:id="@+id/buttonWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_baseline_insert_link_24"
        android:drawableTint="@color/blue"
        android:text="@string/website"
        android:textColor="@color/blue"
        android:padding="0dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/buttonDirections"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="20dp" />
    <Button
        android:id="@+id/buttonCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_baseline_call_24"
        android:drawableTint="@color/blue"
        android:text="@string/call"
        android:textColor="@color/blue"
        android:padding="0dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/buttonDirections"
        app:layout_constraintStart_toEndOf="@id/buttonDirections"
        app:layout_constraintEnd_toStartOf="@id/buttonSave"/>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_baseline_star_24"
        android:drawableTint="@color/blue"
        android:text="@string/save"
        android:textColor="@color/blue"
        android:padding="0dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/buttonDirections"
        app:layout_constraintStart_toEndOf="@id/buttonCall"
        app:layout_constraintEnd_toStartOf="@id/buttonWebsite"/>
    <ImageView
        android:id="@+id/imageViewLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/buttonDirections"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/imageViewElement1"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="@color/grey"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintHorizontal_bias="0"/>
    <ImageView
        android:id="@+id/imageViewElement2"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="@color/grey"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLine"
        app:layout_constraintStart_toEndOf="@id/imageViewElement1"
        app:layout_constraintEnd_toStartOf="@id/imageViewElement3"/>
    <ImageView
        android:id="@+id/imageViewElement3"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="@color/grey"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintHorizontal_bias="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>